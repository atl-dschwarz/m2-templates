<templateSet group="Magento 2">
  <template name="m2command" value="&lt;type name=&quot;Magento\Framework\Console\CommandList&quot;&gt;&#10;    &lt;arguments&gt;&#10;        &lt;argument name=&quot;commands&quot; xsi:type=&quot;array&quot;&gt;&#10;            &lt;item name=&quot;$UNIQUE_IDENTIFIER$&quot; xsi:type=&quot;object&quot;&gt;$CLASS_TO_YOUR_COMMAND$&lt;/item&gt;&#10;        &lt;/argument&gt;&#10;    &lt;/arguments&gt;&#10;&lt;/type&gt;" toReformat="true" toShortenFQNames="true">
    <variable name="UNIQUE_IDENTIFIER" expression="" defaultValue="myCommand" alwaysStopAt="true" />
    <variable name="CLASS_TO_YOUR_COMMAND" expression="" defaultValue="MyNamespace\MyModule\Command\Name" alwaysStopAt="true" />
    <context>
      <option name="XML" value="true" />
    </context>
  </template>
  <template name="m2plugin" value="&lt;type name=&quot;$CLASS_TO_APPLY_PLUGIN_ON$&quot;&gt;&#10;    &lt;plugin name=&quot;$PLUGIN_NAME$&quot; type=&quot;$CLASS_OF_PLUGIN_ITSELF$&quot; sortOrder=&quot;100&quot; disabled=&quot;false&quot; /&gt;&#10;&lt;/type&gt;" description="" toReformat="true" toShortenFQNames="true">
    <variable name="CLASS_TO_APPLY_PLUGIN_ON" expression="" defaultValue="Class\To\Plugin" alwaysStopAt="true" />
    <variable name="PLUGIN_NAME" expression="" defaultValue="mynamespace_mymodule_pluginName" alwaysStopAt="true" />
    <variable name="CLASS_OF_PLUGIN_ITSELF" expression="" defaultValue="MyNamespace\MyModule\Plugin\Name" alwaysStopAt="true" />
    <context>
      <option name="XML" value="true" />
    </context>
  </template>
</templateSet>